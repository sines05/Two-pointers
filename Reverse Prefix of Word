Cách không dùng hai con trỏ:
class Solution {
public:
    string reversePrefix(string word, char ch) {
        int pos = word.find(ch);
        if (pos == string::npos) {
            return word;
        }
  // two pointers
        int left {0}, right {pos};
        while (left < right) {
            swap(word[left], word[right]);
            ++left;
            --right;
        }
        
        return word;
    }
};


